{
  "name": "angular2-start",
  "version": "2.0.0",
  "description": "Angular 2 starter project inspired by: Angular 2 Universal starter kit by @AngularClass",
  "repository": {
    "type": "git",
    "url": "https://github.com/thisissoon/angular2-start.git"
  },
  "scripts": {
    "postinstall": "typings install && npm run clean:ng2",
    "clean:cov": "rm -r -f coverage",
    "clean:dist": "rm -r -f dist",
    "clean:ng2": "rm -r -f node_modules/angular2/manual_typings node_modules/angular2/bundles/typings node_modules/angular2/typings",
    "precopy": "mkdir dist",
    "copy": "cp -r -f src/assets src/index.html dist",
    "less": "find src/ -name '*.less' -exec lessc {} {}.css \\; && find src/ -name '*.less.css' -exec bash -c 'mv \"$0\" \"${0%\\.less.css}.css\"' {} \\;",
    "prestart": "npm run build",
    "start": "forever start dist/server/bundle.js",
    "restart": "forever restart dist/server/bundle.js",
    "stop": "forever stop dist/server/bundle.js",
    "prewatch": "npm start",
    "watch": "gaze 'npm run build && npm restart' 'src/**/*.ts' 'src/**/*.less' 'src/**/*.html'",
    "prebuild": "npm run clean:dist && npm run copy",
    "build": "webpack",
    "pretest": "npm run clean:cov && npm run start",
    "test": "karma start",
    "posttest": "npm run stop && cat coverage/coverage.txt",
    "e2e": "bash ./test-e2e.sh",
    "lint": "tslint $(glob 'src/**/*.ts')",
    "minify:js": "uglifyjs dist/src/app/app.js -m --compress='sequences,properties,dead_code,drop_debugger,conditionals,comparisons,booleans,unused,if_return,join_vars,warnings,drop_console' --preamble '/*! '$npm_package_name' - v'$npm_package_version' - '$(date +%Y-%m-%d)' */' --output dist/src/app/app.min.js"
  },
  "license": "MIT",
  "contributors": [
    "SOON_ <dorks@thisissoon.com>",
    "Ed Opare-Aryee <ed@thisissoon.com>"
  ],
  "dependencies": {
    "angular2": "2.0.0-beta.9",
    "angular2-universal-preview": "0.70.8",
    "bootstrap": "3.3.6",
    "css": "2.2.1",
    "es6-shim": "0.33.3",
    "es6-module-loader": "0.17.11",
    "express": "4.13.4",
    "lodash": "4.6.0",
    "parse5": "1.5.0",
    "preboot": "1.1.0",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.2",
    "xhr2": "0.1.3",
    "zone.js": "0.5.15"
  },
  "devDependencies": {
    "awesome-typescript-loader": "~0.17.0-rc.3",
    "cli-glob": "~0.1.0",
    "coveralls": "~2.11.8",
    "forever": "~0.15.1",
    "gaze-cli": "~0.2.0",
    "istanbul-instrumenter-loader": "~0.2.0",
    "jasmine-core": "~2.4.1",
    "karma": "~0.13.22",
    "karma-chrome-launcher": "~0.2.2",
    "karma-coverage": "~0.5.5",
    "karma-jasmine": "~0.3.7",
    "karma-phantomjs-launcher": "~1.0.0",
    "karma-sourcemap-loader": "~0.3.7",
    "karma-spec-reporter": "0.0.24",
    "karma-webpack": "~1.7.0",
    "less": "~2.6.0",
    "less-loader": "~2.2.2",
    "phantomjs-prebuilt": "~2.1.4",
    "protractor": "~3.1.1",
    "raw-loader": "~0.5.1",
    "source-map-loader": "~0.1.5",
    "tslint": "~3.5.0",
    "typescript": "~1.8.7",
    "typings": "~0.7.7",
    "uglify-js": "~2.6.2",
    "webpack": "~1.12.10",
    "webpack-merge": "~0.8.4"
  }
}
